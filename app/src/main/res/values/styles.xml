<resources>

    <!-- Base application theme. -->
    <style name="Theme.Nusmap.AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:editTextColor">#FFEF7C00</item>
        <item name="android:textColorPrimary">#FFEF7C00</item>
        <item name="android:textColorSecondary">#FFEF7C00</item>
        <item name="android:textColorTertiary">#FFEF7C00</item>
        <item name="android:textColorPrimaryInverse">#FFFFFFFF</item>
        <item name="android:textColorSecondaryInverse">#FFFFFFFF</item>
        <item name="android:textColorTertiaryInverse">#FFFFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DirectoryScreen" parent="Theme.Nusmap">
        <item name="android:textColor">#FFEF7C00</item>
        <item name="android:background">#FF003D7C</item>
        <item name="android:padding">0dp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="AppTheme.CustomActionBarTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="android:actionMenuTextColor">@color/actionbar_text</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="actionMenuTextColor">@color/actionbar_text</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse" >
        <item name="android:background">@color/actionbar_background</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>

        <!-- Support library compatibility -->
        <item name="background">@color/actionbar_background</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- ActionBar tabs text -->
    <style name="MyActionBarTabText"
        parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/actionbar_text</item>
    </style>

    <style name="Theme.Nusmap" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_nusmap</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Nusmap</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Nusmap</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Nusmap</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Nusmap</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Nusmap</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_nusmap</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_nusmap</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Nusmap</item>

        <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Nusmap.Widget</item>

    </style>

    <style name="ActionBar.Solid.Nusmap" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_nusmap</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_nusmap</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_nusmap</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Nusmap</item>
    </style>

    <style name="ActionBar.Transparent.Nusmap" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_nusmap</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Nusmap</item>
    </style>

    <style name="PopupMenu.Nusmap" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_nusmap</item>
    </style>

    <style name="DropDownListView.Nusmap" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_nusmap</item>
    </style>

    <style name="ActionBarTabStyle.Nusmap" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_nusmap</item>
    </style>

    <style name="DropDownNav.Nusmap" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_nusmap</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_nusmap</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_nusmap</item>
    </style>

    <style name="ProgressBar.Nusmap" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_nusmap</item>
    </style>

    <style name="ActionButton.CloseMode.Nusmap" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_nusmap</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Nusmap.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Nusmap</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Nusmap</item>
    </style>

</resources>
